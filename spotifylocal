    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const App = {
                state: {
                    view: 'home', isPlaying: false, currentSongIndex: 0, songs: [], queue: [],
                    playlists: { 'Lagu Disukai': [] }, likedSongs: [], artists: {}, albums: {},
                    shuffle: false, repeat: 'off', visualizerOn: false, currentUser: null,
                    contextSongIndex: null
                },
                dom: {}, // Will be populated
                storage: {
                    get: (key) => { try { return JSON.parse(localStorage.getItem(key)); } catch { return null; } },
                    set: (key, value) => { try { localStorage.setItem(key, JSON.stringify(value)); } catch(e) { alert('Penyimpanan gagal. Ruang mungkin penuh.'); } },
                    init() {
                        const user = this.get('spotifyCurrentUser');
                        if (user) {
                            App.state.currentUser = user;
                            App.state.songs = this.get('spotifySongs') || [];
                            App.state.playlists = this.get('spotifyPlaylists') || { 'Lagu Disukai': [] };
                            App.state.likedSongs = this.get('spotifyLikedSongs') || [];
                            document.body.setAttribute('data-theme', this.get('spotifyTheme') || 'vibrant');
                        }
                    }
                },
                init() {
                    this.dom = { // Cache DOM elements
                        pages: { auth: document.getElementById('auth-page'), app: document.getElementById('app-page') },
                        authForms: document.getElementById('auth-forms'), loginForm: document.getElementById('login-form'),
                        registerForm: document.getElementById('register-form'), showLogin: document.getElementById('show-login'),
                        showRegister: document.getElementById('show-register'), sidebar: document.getElementById('sidebar'),
                        contentHeader: document.getElementById('content-header'), contentBody: document.getElementById('content-body'),
                        fileInput: document.getElementById('file-input'), audioPlayer: document.getElementById('audio-player'),
                        playerArtwork: document.getElementById('player-artwork'), playerTitle: document.getElementById('player-title'),
                        playerArtist: document.getElementById('player-artist'), playBtn: document.getElementById('play-btn'),
                        prevBtn: document.getElementById('prev-btn'), nextBtn: document.getElementById('next-btn'),
                        shuffleBtn: document.getElementById('shuffle-btn'), repeatBtn: document.getElementById('repeat-btn'),
                        progressBar: document.getElementById('progress-bar'), currentTimeEl: document.getElementById('current-time'),
                        totalTimeEl: document.getElementById('total-time'), queueBtn: document.getElementById('queue-btn'),
                        queuePanel: document.getElementById('queue-panel'), queueList: document.getElementById('queue-list'),
                        visualizerBtn: document.getElementById('visualizer-btn'), visualizer: document.getElementById('visualizer'),
                        ctxMenu: document.getElementById('context-menu'), ctxAddToPlaylist: document.getElementById('ctx-add-to-playlist'),
                        ctxLikedSongs: document.getElementById('ctx-liked-songs'), logoutBtn: document.getElementById('logout-btn'),
                        createPlaylistModal: document.getElementById('create-playlist-modal'), newPlaylistNameInput: document.getElementById('new-playlist-name'),
                        confirmCreatePlaylistBtn: document.getElementById('confirm-create-playlist'), addToPlaylistModal: document.getElementById('add-to-playlist-modal'),
                        playlistSelect: document.getElementById('playlist-select'), confirmAddToPlaylistBtn: document.getElementById('confirm-add-to-playlist')
                    };
                    this.storage.init();
                    this.setupEventListeners();
                    if (this.state.currentUser) this.showAppPage();
                    else this.showAuthPage();
                },
                showAuthPage() { this.dom.pages.auth.classList.add('active'); this.dom.pages.app.classList.remove('active'); },
                showAppPage() {
                    this.dom.pages.auth.classList.remove('active'); this.dom.pages.app.classList.add('active');
                    this.updateView(this.state.view); this.updatePlayerUI();
                },
                updateView(viewName) {
                    this.state.view = viewName;
                    document.querySelectorAll('.main-nav a, .library-nav a').forEach(link => link.classList.remove('active'));
                    document.querySelector(`[data-view="${viewName}"]`)?.classList.add('active');
                    let headerHTML = '', bodyHTML = '';
                    switch(viewName) {
                        case 'home': headerHTML = `<h1>Selamat Datang, ${this.state.currentUser}!</h1><button class="btn-icon" id="add-song-btn"><i class="fas fa-plus"></i> Tambah Lagu</button>`; bodyHTML = `<h2 style="margin-bottom: 16px;">Lagu Anda</h2><ul class="song-list" id="home-song-list"></ul>`; break;
                        case 'search': headerHTML = `<h1>Cari</h1><input type="text" id="search-input" placeholder="Cari berdasarkan judul atau artis...">`; bodyHTML = `<ul class="song-list" id="search-results-list"></ul>`; break;
                        case 'library-playlists': headerHTML = `<h1>Playlist</h1><button class="btn-icon" id="create-playlist-trigger"><i class="fas fa-plus"></i> Buat Playlist</button>`; bodyHTML = `<div class="content-grid" id="playlist-grid"></div>`; break;
                        case 'library-artists': headerHTML = `<h1>Artis</h1>`; bodyHTML = `<div class="content-grid" id="artist-grid"></div>`; break;
                        case 'library-albums': headerHTML = `<h1>Album</h1>`; bodyHTML = `<div class="content-grid" id="album-grid"></div>`; break;
                        case 'account': headerHTML = `<h1>Akun</h1>`; bodyHTML = `<div style="max-width: 600px;"><h2>${this.state.currentUser}</h2><p style="color: var(--text-secondary); margin-bottom: 24px;">Pengguna Lokal</p><h3>Statistik</h3><p>Jumlah Lagu: ${this.state.songs.length}</p><p>Playlist: ${Object.keys(this.state.playlists).length}</p><p>Lagu Disukai: ${this.state.likedSongs.length}</p><h3 style="margin-top: 24px;">Pengaturan</h3><label for="theme-selector">Tema:</label><select id="theme-selector" style="margin-left: 8px; padding: 4px;"><option value="dark">Gelap</option><option value="light">Terang</option><option value="vibrant">Vibrant</option></select></div>`; break;
                    }
                    this.dom.contentHeader.innerHTML = headerHTML;
                    this.dom.contentBody.innerHTML = bodyHTML;
                    this.renderViewContent();
                },
                renderViewContent() {
                    const renderList = (listId, songs) => {
                        const listEl = document.getElementById(listId); if (!listEl) return;
                        if (songs.length === 0) { listEl.innerHTML = '<p style="text-align: center; color: var(--text-secondary);">Tidak ada lagu.</p>'; return; }
                        listEl.innerHTML = songs.map((song, index) => {
                            const originalIndex = this.state.songs.indexOf(song);
                            const isLiked = this.state.likedSongs.includes(originalIndex);
                            return `<li class="song-item ${this.state.currentSongIndex === originalIndex ? 'playing' : ''}" data-index="${originalIndex}"><span class="index">${this.state.currentSongIndex === originalIndex && this.state.isPlaying ? '<i class="fas fa-volume-up"></i>' : index + 1}</span><div class="details"><div class="title">${song.title}</div><div class="artist">${song.artist}</div></div><div class="album">${song.album}</div><div class="actions"><i class="fas fa-heart ${isLiked ? 'liked' : ''}" data-action="like" data-index="${originalIndex}"></i><span class="duration">${song.duration}</span></div></li>`;
                        }).join('');
                    };
                    switch(this.state.view) {
                        case 'home': renderList('home-song-list', this.state.songs); break;
                        case 'search':
                            const searchInput = document.getElementById('search-input');
                            if(searchInput) searchInput.oninput = (e) => {
                                const query = e.target.value.toLowerCase();
                                const filtered = this.state.songs.filter(s => s.title.toLowerCase().includes(query) || s.artist.toLowerCase().includes(query));
                                renderList('search-results-list', filtered);
                            };
                            break;
                        case 'library-playlists':
                            const grid = document.getElementById('playlist-grid'); if (!grid) return;
                            grid.innerHTML = Object.keys(this.state.playlists).map(name => `<div class="grid-item" data-playlist="${name}"><div class="artwork"><i class="fas fa-music"></i></div><div class="title">${name}</div><div class="subtitle">${this.state.playlists[name].length} lagu</div></div>`).join('');
                            grid.onclick = (e) => {
                                const item = e.target.closest('.grid-item');
                                if(item) { const name = item.dataset.playlist; const songs = this.state.playlists[name].map(i => this.state.songs[i]); this.dom.contentHeader.innerHTML = `<h1>${name}</h1>`; this.dom.contentBody.innerHTML = `<ul class="song-list" id="playlist-detail-list"></ul>`; renderList('playlist-detail-list', songs); }
                            };
                            break;
                        case 'library-artists':
                            const artGrid = document.getElementById('artist-grid'); if (!artGrid) return;
                            this.state.artists = {}; this.state.songs.forEach(s => { if (!this.state.artists[s.artist]) this.state.artists[s.artist] = []; this.state.artists[s.artist].push(s); });
                            artGrid.innerHTML = Object.keys(this.state.artists).map(name => `<div class="grid-item" data-artist="${name}"><div class="artwork"><i class="fas fa-microphone-alt"></i></div><div class="title">${name}</div><div class="subtitle">${this.state.artists[name].length} lagu</div></div>`).join('');
                            artGrid.onclick = (e) => { const item = e.target.closest('.grid-item'); if(item) { const name = item.dataset.artist; this.dom.contentHeader.innerHTML = `<h1>${name}</h1>`; this.dom.contentBody.innerHTML = `<ul class="song-list" id="artist-detail-list"></ul>`; renderList('artist-detail-list', this.state.artists[name]); } };
                            break;
                        case 'library-albums':
                            const albGrid = document.getElementById('album-grid'); if (!albGrid) return;
                            this.state.albums = {}; this.state.songs.forEach(s => { if (!this.state.albums[s.album]) this.state.albums[s.album] = []; this.state.albums[s.album].push(s); });
                            albGrid.innerHTML = Object.keys(this.state.albums).map(name => `<div class="grid-item" data-album="${name}"><div class="artwork"><i class="fas fa-compact-disc"></i></div><div class="title">${name}</div><div class="subtitle">${this.state.albums[name].length} lagu</div></div>`).join('');
                            albGrid.onclick = (e) => { const item = e.target.closest('.grid-item'); if(item) { const name = item.dataset.album; this.dom.contentHeader.innerHTML = `<h1>${name}</h1>`; this.dom.contentBody.innerHTML = `<ul class="song-list" id="album-detail-list"></ul>`; renderList('album-detail-list', this.state.albums[name]); } };
                            break;
                        case 'account':
                            const themeSelector = document.getElementById('theme-selector');
                            if(themeSelector) {
                                themeSelector.value = document.body.getAttribute('data-theme');
                                themeSelector.onchange = (e) => {
                                    const theme = e.target.value; document.body.setAttribute('data-theme', theme); this.storage.set('spotifyTheme', theme);
                                };
                            }
                            break;
                    }
                },
                updatePlayerUI() {
                    const song = this.state.songs[this.state.currentSongIndex];
                    if (song) {
                        this.dom.playerTitle.textContent = song.title; this.dom.playerArtist.textContent = song.artist;
                        this.dom.playerArtwork.innerHTML = `<img src="${song.artwork || 'https://via.placeholder.com/56'}" style="width:100%; height:100%; object-fit:cover; border-radius:4px;">`;
                    } else {
                        this.dom.playerTitle.textContent = 'Tidak ada lagu yang dimainkan'; this.dom.playerArtist.textContent = '-'; this.dom.playerArtwork.innerHTML = '<i class="fas fa-music"></i>';
                    }
                    document.querySelectorAll('.song-item').forEach(item => {
                        const index = parseInt(item.dataset.index); item.classList.toggle('playing', index === this.state.currentSongIndex);
                        const indexEl = item.querySelector('.index');
                        indexEl.innerHTML = (index === this.state.currentSongIndex && this.state.isPlaying) ? '<i class="fas fa-volume-up"></i>' : this.state.songs.indexOf(this.state.songs.find(s=>s===this.state.songs[index])) + 1;
                    });
                },
                updateQueueUI() {
                    this.dom.queueList.innerHTML = this.state.queue.map((song, index) => `<div class="queue-item" data-queue-index="${index}"><div class="info"><div class="title">${song.title}</div><div class="artist">${song.artist}</div></div><i class="fas fa-times remove-btn" data-queue-index="${index}"></i></div>`).join('');
                },
                playSong(index) {
                    if (index < 0 || index >= this.state.songs.length) return;
                    this.state.currentSongIndex = index; const song = this.state.songs[this.state.currentSongIndex];
                    this.dom.audioPlayer.src = song.dataUrl;
                    this.dom.audioPlayer.play().then(() => {
                        this.state.isPlaying = true; this.updatePlayerUI(); this.updatePlayPauseButton(); this.buildQueue();
                    }).catch(err => console.error("Playback failed:", err));
                },
                buildQueue() {
                    let remainingSongs = [...this.state.songs.slice(this.state.currentSongIndex + 1)];
                    if (this.state.shuffle) this.state.queue = remainingSongs.sort(() => Math.random() - 0.5);
                    else this.state.queue = remainingSongs;
                    this.updateQueueUI();
                },
                updatePlayPauseButton() { this.dom.playBtn.innerHTML = this.state.isPlaying ? '<i class="fas fa-pause"></i>' : '<i class="fas fa-play"></i>'; },
                formatTime(seconds) { if (isNaN(seconds)) return "0:00"; const mins = Math.floor(seconds / 60); const secs = Math.floor(seconds % 60); return `${mins}:${secs < 10 ? '0' : ''}${secs}`; },
                toggleLikedSong(index) {
                    const isLiked = this.state.likedSongs.includes(index);
                    if (isLiked) {
                        this.state.likedSongs = this.state.likedSongs.filter(i => i !== index);
                        this.state.playlists['Lagu Disukai'] = this.state.playlists['Lagu Disukai'].filter(i => i !== index);
                    } else {
                        this.state.likedSongs.push(index); this.state.playlists['Lagu Disukai'].push(index);
                    }
                    this.storage.setLikedSongs(this.state.likedSongs); this.storage.setPlaylists(this.state.playlists);
                    this.renderViewContent();
                },
                setupEventListeners() {
                    // Auth
                    this.dom.loginForm.onsubmit = (e) => { e.preventDefault(); const data = Object.fromEntries(new FormData(e.target).entries()); const users = this.storage.get('spotifyUsers') || {}; if (users[data.username] && users[data.username] === data.password) { this.storage.set('spotifyCurrentUser', data.username); this.state.currentUser = data.username; this.storage.init(); this.showAppPage(); } else { alert('Username atau password salah!'); } };
                    this.dom.registerForm.onsubmit = (e) => { e.preventDefault(); const data = Object.fromEntries(new FormData(e.target).entries()); const users = this.storage.get('spotifyUsers') || {}; if (users[data.username]) { alert('Username sudah ada!'); } else { users[data.username] = data.password; this.storage.set('spotifyUsers', users); alert('Registrasi berhasil! Silakan masuk.'); this.dom.authForms.classList.remove('slide-right'); } };
                    this.dom.showRegister.onclick = () => this.dom.authForms.classList.add('slide-right');
                    this.dom.showLogin.onclick = () => this.dom.authForms.classList.remove('slide-right');

                    // Navigation
                    document.querySelectorAll('.main-nav a, .library-nav a').forEach(link => link.addEventListener('click', (e) => { e.preventDefault(); this.updateView(e.currentTarget.dataset.view); }));

                    // Player
                    this.dom.playBtn.onclick = () => { if (this.state.songs.length === 0) return; if (this.state.isPlaying) this.dom.audioPlayer.pause(); else { if (this.dom.audioPlayer.src === '') this.playSong(this.state.currentSongIndex); else this.dom.audioPlayer.play(); } this.state.isPlaying = !this.state.isPlaying; this.updatePlayPauseButton(); this.updatePlayerUI(); };
                    this.dom.nextBtn.onclick = () => { if (this.state.songs.length === 0) return; if (this.state.repeat === 'one') { this.playSong(this.state.currentSongIndex); return; } if (this.state.queue.length > 0) { const nextSong = this.state.queue.shift(); const nextIndex = this.state.songs.indexOf(nextSong); this.playSong(nextIndex); } else if (this.state.repeat === 'all') this.playSong(0); else { this.dom.audioPlayer.pause(); this.state.isPlaying = false; this.updatePlayPauseButton(); } };
                    this.dom.prevBtn.onclick = () => { if (this.state.songs.length === 0) return; this.playSong((this.state.currentSongIndex - 1 + this.state.songs.length) % this.state.songs.length); };
                    this.dom.shuffleBtn.onclick = () => { this.state.shuffle = !this.state.shuffle; this.dom.shuffleBtn.classList.toggle('active', this.state.shuffle); this.buildQueue(); };
                    this.dom.repeatBtn.onclick = () => { const modes = ['off', 'all', 'one']; const i = modes.indexOf(this.state.repeat); this.state.repeat = modes[(i + 1) % modes.length]; this.dom.repeatBtn.classList.toggle('active', this.state.repeat !== 'off'); this.dom.repeatBtn.innerHTML = this.state.repeat === 'one' ? '<i class="fas fa-redo">1</i>' : '<i class="fas fa-redo"></i>'; };
                    this.dom.audioPlayer.ontimeupdate = () => { if (this.dom.audioPlayer.duration) { const progress = (this.dom.audioPlayer.currentTime / this.dom.audioPlayer.duration) * 100; this.dom.progressBar.value = progress; this.dom.currentTimeEl.textContent = this.formatTime(this.dom.audioPlayer.currentTime); } };
                    this.dom.audioPlayer.onloadedmetadata = () => this.dom.totalTimeEl.textContent = this.formatTime(this.dom.audioPlayer.duration);
                    this.dom.audioPlayer.onended = () => this.dom.nextBtn.click();
                    this.dom.progressBar.oninput = () => { const time = (this.dom.progressBar.value / 100) * this.dom.audioPlayer.duration; this.dom.audioPlayer.currentTime = time; };

                    // Content Body Event Delegation
                    this.dom.contentBody.onclick = (e) => {
                        const songItem = e.target.closest('.song-item');
                        if (songItem && !e.target.closest('.actions')) this.playSong(parseInt(songItem.dataset.index));
                        const likeBtn = e.target.closest('[data-action="like"]');
                        if (likeBtn) { e.stopPropagation(); this.toggleLikedSong(parseInt(likeBtn.dataset.index)); }
                        const gridItem = e.target.closest('.grid-item');
                        if (gridItem && gridItem.dataset.playlist) { /* handled in renderViewContent */ }
                        if (e.target.id === 'add-song-btn') this.dom.fileInput.click();
                        if (e.target.id === 'create-playlist-trigger') this.dom.createPlaylistModal.classList.add('active');
                    };
                    this.dom.contentBody.oncontextmenu = (e) => {
                        const songItem = e.target.closest('.song-item');
                        if (songItem) {
                            e.preventDefault();
                            this.state.contextSongIndex = parseInt(songItem.dataset.index);
                            this.dom.ctxMenu.style.top = `${e.pageY}px`; this.dom.ctxMenu.style.left = `${e.pageX}px`; this.dom.ctxMenu.classList.add('active');
                        }
                    };
                    document.onclick = () => this.dom.ctxMenu.classList.remove('active');
                    this.dom.ctxLikedSongs.onclick = () => { this.toggleLikedSong(this.state.contextSongIndex); this.dom.ctxMenu.classList.remove('active'); };
                    this.dom.ctxAddToPlaylist.onclick = () => {
                        this.dom.playlistSelect.innerHTML = Object.keys(this.state.playlists).filter(p => p !== 'Lagu Disukai').map(p => `<option value="${p}">${p}</option>`).join('');
                        this.dom.addToPlaylistModal.classList.add('active');
                        this.dom.ctxMenu.classList.remove('active');
                    };

                    // Other
                    this.dom.fileInput.onchange = (e) => {
                        const files = Array.from(e.target.files);
                        files.forEach(file => {
                            if (file.type.startsWith('audio/')) {
                                const reader = new FileReader();
                                reader.onload = (event) => {
                                    const title = file.name.replace(/\.[^/.]+$/, "");
                                    const parts = title.split(' - ');
                                    const artist = parts.length > 1 ? parts[0] : 'Artis Tidak Diketahui';
                                    const songTitle = parts.length > 1 ? parts.slice(1).join(' - ') : title;
                                    this.state.songs.push({ title: songTitle, artist: artist, album: 'Album Tidak Diketahui', dataUrl: event.target.result, duration: '0:00' });
                                };
                                reader.readAsDataURL(file);
                            }
                        });
                        this.storage.set('spotifySongs', this.state.songs);
                        setTimeout(() => { this.updateView(this.state.view); this.buildQueue(); }, 500);
                        this.dom.fileInput.value = '';
                    };
                    this.dom.queueBtn.onclick = () => this.dom.queuePanel.classList.toggle('active');
                    this.dom.queueList.onclick = (e) => { if (e.target.classList.contains('remove-btn')) { const i = parseInt(e.target.dataset.queueIndex); this.state.queue.splice(i, 1); this.updateQueueUI(); } };
                    this.dom.visualizerBtn.onclick = () => { /* Visualizer logic */ };
                    this.dom.logoutBtn.onclick = () => { if (confirm('Keluar?')) { this.storage.set('spotifyCurrentUser', null); this.state.currentUser = null; this.showAuthPage(); } };
                    document.querySelectorAll('[data-modal]').forEach(btn => { btn.onclick = () => document.getElementById(btn.dataset.modal).classList.remove('active'); });
                    this.dom.confirmCreatePlaylistBtn.onclick = () => { const name = this.dom.newPlaylistNameInput.value.trim(); if (name && !this.state.playlists[name]) { this.state.playlists[name] = []; this.storage.setPlaylists(this.state.playlists); this.updateView('library-playlists'); this.dom.createPlaylistModal.classList.remove('active'); this.dom.newPlaylistNameInput.value = ''; } };
                    this.dom.confirmAddToPlaylistBtn.onclick = () => { const playlist = this.dom.playlistSelect.value; if (playlist && !this.state.playlists[playlist].includes(this.state.contextSongIndex)) { this.state.playlists[playlist].push(this.state.contextSongIndex); this.storage.setPlaylists(this.state.playlists); } this.dom.addToPlaylistModal.classList.remove('active'); };
                }
            };
            App.init();
        });
    </script>
</body>
</html>
